const pool = require('../utils/pool');
module.exports = class LeagueLocations {
  constructor(row) {
    this.id = row.id;
    this.name = row.name;
    this.biome = row.biome;
    this.monster = row.monster;
  }
  static async getAll() {
    const { rows } = await pool.query('SELECT * from locations');
    return rows.map((locationRow) => new LeagueLocations(locationRow));
  }
};

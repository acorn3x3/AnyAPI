const pool = require('../utils/pool');
module.exports = class LeagueChampions {
  constructor(row) {
    this.id = row.id;
    this.name = row.name;
    this.title = row.title;
    this.quote = row.quote;
  }
  static async getAll() {
    const { rows } = await pool.query('SELECT * from champions');
    return rows.map((championRow) => new LeagueChampions(championRow));
  }
};
